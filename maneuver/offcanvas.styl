// Function: Min Positive Value
// 
// If both values are truthy, return the minimum values
// If only one value is truthy, return that value
// Else return 0
//
// Params: val1 val2
-minPositiveValue(val1, val2)
  if (val1 && val2)
    return min(val1, val2)
  else if (val1 || val2)
    return val1 || val2
  return 0


// Function: Offcanvas Content Push Settings
// 
// Push enables menus to push content instead of overlapping it.
// Push only applies when share or show don't apply
//
// Params:
//   size:    size of offcanvas menus (4 values)
//   share:   min-width at which menu shares screen with content (4 values)
//   show:    min-width at which menus are always visible (4 values)
//   push:    boolean - menu pushes content instead of overlapping (4 values)
//   content: css selector for content area
//   open:    classes that parent offcanvas element will toggle for open (4 values)
-offcanvasContentPushSettings(size, share, show, push, content, open)
  if push[0] && size[0]
    mw = -minPositiveValue(share[0], show[0])
    if (mw)
      @media (max-width mw)
        &.{open[0]} {content}
          margin-top size[0]
          margin-bottom - size[0]
    else
      &.{open[0]} {content}
        margin-top size[0]
        margin-bottom - size[0]
  if push[1] && size[1]
    mw = -minPositiveValue(share[1], show[1])
    if (mw)
      @media (max-width mw)
        &.{open[1]} {content}
          margin-right size[1]
          margin-left - size[1]
    else
      &.{open[1]} {content}
        margin-right size[1]
        margin-left - size[1]
  if push[2] && size[2]
    mw = -minPositiveValue(share[2], show[2])
    if (mw)
      @media (max-width mw)
        &.{open[2]} {content}
          margin-bottom size[2]
          margin-top - size[2]
    else
      &.{open[2]} {content}
        margin-bottom size[2]
        margin-top - size[2]
  if push[3] && size[3]
    mw = -minPositiveValue(share[3], show[3])
    if (mw)
      @media (max-width mw)
        &.{open[3]} {content}
          margin-left size[3]
          margin-right - size[3]
    else
      &.{open[3]} {content}
        margin-left size[3]
        margin-right - size[3]


// Function: Offcanvas Content Share Settings
// 
// Share is the min width at which the menu and the content will share the screen.
//
// Params:
//   size:    size of offcanvas menus (4 values)
//   share:   min-width at which menu shares screen with content (4 values)
//   content: css selector for content area
//   open:    classes that parent offcanvas element will toggle for open (4 values)
-offcanvasContentShareSettings(size, share, content, open)
  if share[0]
    @media (min-width share[0])
      &.{open[0]}
        & > {content}
          margin-top size[0]
        if open[2]
          &:not(.{open[2]}) > {content}
            height 'calc(100% - %s)' % size[0]
          &.{open[2]} > {content}
            height 'calc(100% - %s)' % (size[0] + size[2])
  if share[1]
    @media (min-width share[1])
      &.{open[1]} > {content}
        margin-right size[1]
  if share[2]
    @media (min-width share[2])
      &.{open[2]}
        & > {content}
          margin-bottom size[2]
        if open[0]
          &:not(.{open[0]}) > {content}
            height 'calc(100% - %s)' % size[2]
  if share[3]
    @media (min-width share[3])
      &.{open[3]} > {content}
        margin-left size[3]


// Function: Offcanvas Content Show Settings
// 
// Show is the minimum width at which the menu is always visible and can't be hidden
//
// Params:
//   size:    size of offcanvas menus (4 values)
//   show:    min-width at which menus are always visible (4 values)
//   content: css selector for content area
//   open:    classes that parent offcanvas element will toggle for open (4 values)
-offcanvasContentShowSettings(size, show, content, open)
  if show[0]
    @media (min-width show[0])
      & > {content}
        margin-top size[0]
        if show[2] and show[2] <= show[0]
          height 'calc(100% - %s)' % (size[0] + size[2])
        else
          height 'calc(100% - %s)' % size[0]
      if open[2]
        &.{open[2]}:not(.{open[0]}) > {content}
          height 'calc(100% - %s)' % (size[0] + size[2])
  if show[1]
    @media (min-width show[1])
      & > {content}
        margin-right size[1]
  if show[2]
    @media (min-width show[2])
      & > {content}
        margin-bottom size[2]
        if show[0] and show[0] <= show[2]
          height 'calc(100% - %s)' % (size[0] + size[2])
        else
          height 'calc(100% - %s)' % size[2]
      if open[0]
        &.{open[0]}:not(.{open[2]}) > {content}
          height 'calc(100% - %s)' % (size[0] + size[2])
  if show[3]
    @media (min-width show[3])
      & > {content}
        margin-left size[3]

