@import 'jeet'

normalize-css()
typography()

/**********************************
    Variables
**********************************/

/* Color */
gray = #292929
teal = #2BBFBD
yellow = #F2B33D
orange = #F29B30
red = #F22E2E

html, body
  padding 0
  margin 0
  height 100%
  color gray
  
/**********************************
    Style classes
**********************************/

.menu-btn
  padding: 0 0.2em 0.2em
  border-radius 0.2em
  position absolute
  z-index 1000
  transition: all 0.3s ease
  border none
  box-shadow 2px 2px 2px gray
  i
    font-size 2.3em
    position relative
    top 0.05em
    color #000
  
/**********************************
    Wrap
**********************************/

.wrap
  height 100%
  offcanvas(size: 20em, show: 0, push: 50em)
  &.open
    #toggle-left-offcanvas
        left 20em
  .menu-left
    background teal
    z-index 10
#toggle-left-offcanvas
  background transparent
  left: 0
      

/**********************************
    Menu left
**********************************/
nav.menu-left
  ul
    reset-list()
    li
      margin 1em 0
    a
      color gray
      font-size 2em
      display block
      background orange
      padding 0.5em
      transition: all 0.3s ease
      &:hover
        background darken(orange, 20%)
        color #fff

/**********************************
    Content
**********************************/
  
header
  overflow hidden
  & > div
    column(1/2)
    +below(70em)
      stack()
  h1, h2
    display inline-block
    margin-right 2em
  h1
    margin 0.3em 1em 0.3em 4em
  @media (max-width 70em)
    h2
      margin 0 4em 0 2.7em
    
  ul
    inline-list()
    display inline-block
    position: relative
    top 0.5em
    

#about
  p
    font-size 1.3em
    margin 1em 2em
    padding 1em 2em
    border-top 3px solid orange
    border-bottom 3px solid orange
  & > p:first-child
    margin-top 0
  
