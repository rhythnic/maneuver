@import 'jeet'

normalize-css()
typography()

/**********************************
    Variables
**********************************/

/* Color */
gray = #292929
teal = #2BBFBD
yellow = #F2B33D
orange = #F29B30
red = #F22E2E

mobile = 40em
tablet = 60em
laptop = 80em
/**********************************
    Global settings
**********************************/

html, body
  padding 0
  margin 0
  height 100%
  color gray
  
section
  margin 0 1em
  +above(mobile)
    margin 0 2em
  h2
    margin-top 1.5em
pre
  pre()
code
  code()
  
/**********************************
    Style classes
**********************************/

.menu-btn
  padding: 0 0.2em 0.2em
  border-radius 0.2em
  position absolute
  z-index 1000
  transition: all 0.3s ease
  border none
  box-shadow 2px 2px 2px gray
  i
    font-size 2.3em
    position relative
    top 0.05em
    color #000
    
.description
  area(#d8d8d8)
  
/**********************************
    Wrap
**********************************/

.wrap
  height 100%
  offcanvas(size: 20em, show: 0, push: 50em)
  &.open
    #toggle-left-offcanvas
        left 20em
  .menu-left
    background teal
    z-index 10
#toggle-left-offcanvas
  background transparent
  left: 0
      

/**********************************
    Menu left
**********************************/
nav.menu-left
  ul
    reset-list()
    li
      margin 1em 0
    a
      color gray
      font-size 2em
      display block
      background orange
      padding 0.5em
      transition: all 0.3s ease
      &:hover
        background darken(orange, 20%)
        color #fff
        

/**********************************
    Header
**********************************/

header
  overflow hidden
  h1
    display inline-block
  h1
    margin 0.3em 0.5em 0em 1.5em
  +above(mobile)
    h1
      margin-right 1em
  +above(tablet)
    h1
      margin 0.3em 1em 0.3em 4em   
    
  ul
    inline-list()
    display inline-block
    position: relative
    top 0.5em

/**********************************
    About
**********************************/
  
#about
  p
    font-size 1.3em
    border-top 3px solid orange
    border-bottom 3px solid orange
    padding 0.5em
    +above(mobile)
      padding 1em 2em
  & > p:first-child
    margin-top 0
    
/**********************************
    Offcanvas
**********************************/

#offcanvas
  .code
    & > div
      +above(laptop)
        col(1/3)
    h4
      color darken(red, 30%)
